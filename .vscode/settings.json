{
    "python.analysis.typeCheckingMode": "strict",
    "window.zoomLevel": 0,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "python.formatting.provider": "autopep8",
    "editor.formatOnSave": true, // To format on save
    "editor.rulers": [
        79
    ],
    "python.linting.pylintArgs": [
        "--max-line-length=79",
        "--disable=C0114,C0115,C0116",
        "--enable=W0614"
    ],
    "editor.tabSize": 4,
    "python.sortImports.args": [
        "--line-length",
        "79"
    ],
    "[python]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": true, // Ensure this is enabled for Python files specifically
        "editor.tabSize": 4
    },
}